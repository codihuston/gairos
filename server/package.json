{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "prod": "cross-env NODE_ENV=production npm-run-all server",
    "dev": "npm run server:dev",
    "server:dev": "cross-env NODE_ENV=development npm-run-all lint server",
    "lint": "eslint .",
    "server": "node ./bin/www",
    "watch": "nodemon --config nodemon.json",
    "dev:debug": "npm run server:dev:debug",
    "server:dev:debug": "cross-env NODE_ENV=development DEBUG=* npm-run-all lint server",
    "watch:debug": "nodemon --exec \"npm run server:dev:debug\"",
    "test": "cross-env NODE_ENV=test mocha --exit",
    "watch:test": "cross-env DEBUG=server:*,test:* nodemon --config nodemon-test.json",
    "ci": "cross-env NODE_ENV=ci mocha --exit"
  },
  "dependencies": {
    "apollo-server-express": "^2.9.15",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  }
}
